}
.icn-box {
    display: flex;
    flex-direction: row;
    justify-content: space-around;
}
.credit {
    display: flex;
    flex-direction: row;
    justify-content: center;
    margin-top: 150%;
    font-size: 0.8rem;
    color: white;
    font-weight: 0;
}
.icn {
    width: 3rem;
    margin-top: 1rem;
    margin-bottom: 3rem;
    color: white;
    filter: drop-shadow(0px 0px 4px #ffffffb7);
    z-index: 5;
}
/* hover */
.icn-box :hover {
    animation: jiggle 1s ease-out;
}
@keyframes jiggle {
    100% {
        transform-origin: center center;
    }
    15% {
        transform: scale(1.4, 1.2);
    }
    40% {
        transform: scale(0.9, 0.9);
    }
    75% {
        transform: scale(1.08, 1);
    }
    100% {
        transform: scale(1, 1);
    }
}
.container {
    display: flex;
    padding-top: 2rem;
    flex-direction: row-reverse;
}
.galib {
    width: 10rem;
    margin-right: 22rem;
    filter: drop-shadow(0px 0px 5px #ff6b09);
}
.name {
    text-align: center;
    font-family: 'Domine', serif;
    font-size: 0.7rem;
    margin-right: 22rem;
}
